<h1>Login</h1>

<%= form_with url: login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
